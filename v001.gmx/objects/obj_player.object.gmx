//Set controls for movement.
var Turn,Vert,Hor;
Turn = Kturnleft-Kturnright;
Vert = Kup-Kdown;
Hor = Kleft-Kright;

//Smooth turn speed for turning motion.
TurnSpeed = TurnSpeed*0.9 + 0.1*Turn;

//Handle player turning gun and player direction.
Turn = angle_difference(point_direction(x,y,mouse_x,mouse_y),GunDirection);
GunDirection = clamp(GunDirection+0.1*Turn*FRAME_DELTA-WalkDirection,-100,100)+WalkDirection;
WalkDirection += 2*TurnSpeed*FRAME_DELTA;

//Smooth walk using controls defined above.
WalkSpeedX = WalkSpeedX*0.96+FRAME_DELTA*(0.1*Hor*dcos(WalkDirection+90)+0.2*Vert*dcos(WalkDirection));
WalkSpeedY = WalkSpeedY*0.96-FRAME_DELTA*(0.1*Hor*dsin(WalkDirection+90)+0.2*Vert*dsin(WalkDirection));
x += WalkSpeedX;
y += WalkSpeedY;

//Smoothly rotate and translate view with player.
view_angle[0] = view_angle[0]*0.998+0.002*(90-WalkDirection);
view_xview[0] = view_xview[0]*0.9+0.1*(x-view_wview[0]/2);
view_yview[0] = view_yview[0]*0.9+0.1*(y-view_hview[0]/2);
